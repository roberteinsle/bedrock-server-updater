# Crafty Controller API Configuration
# Get your API token from Crafty Controller: Settings > API
CRAFTY_API_URL=https://your-crafty-instance.com
CRAFTY_API_TOKEN=your-api-token-here

# E-Mail Notification Configuration
# SMTP server settings for sending notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=bedrock-updater@example.com
SMTP_TO=admin@example.com

# Use TLS for SMTP connection (true/false)
SMTP_USE_TLS=true

# Backup Configuration
# Directory where backups will be stored
BACKUP_DIR=/opt/bedrock-server-updater/backups

# Number of days to keep old backups (older backups will be automatically deleted)
BACKUP_RETENTION_DAYS=7

# Logging Configuration
# Directory where log files will be stored
LOG_DIR=/opt/bedrock-server-updater/logs

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Number of days to keep old logs (older logs will be automatically deleted)
LOG_RETENTION_DAYS=30

# Update Configuration
# Timeout in seconds for server stop/start operations
SERVER_TIMEOUT=30

# Wait time in seconds after starting servers before checking status
SERVER_START_WAIT=20

# Download timeout in seconds for Minecraft server download
DOWNLOAD_TIMEOUT=300

# Dry run mode - set to true to test without making actual changes
DRY_RUN=false
